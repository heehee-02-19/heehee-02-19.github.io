---
// Base layout with left sidebar and main content area.
// Used for all pages.
import '../styles/global.css';
---
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{Astro.title ?? '헬리'}</title>
  </head>
  <body>
    <div class="container">
      <aside class="sidebar">
        <h2>헬리</h2>
        <nav>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/research/">Research</a></li>
            <li><a href="/about/">About</a></li>
          </ul>
        </nav>
      </aside>

      <main class="main">
        <slot />
      </main>

      <!-- TOC placeholder; only populated on post pages -->
      <aside class="toc" id="toc"></aside>
    </div>

    <!-- Simple client‑side TOC generator for post pages -->
    <script>
      // Generate TOC from h2/h3 in the main content
      const toc = document.getElementById('toc');
      const headings = document.querySelectorAll('.main h2, .main h3');
      if (headings.length) {
        const ul = document.createElement('ul');
        headings.forEach(h => {
          const li = document.createElement('li');
          const a = document.createElement('a');
          const id = h.id || h.textContent.trim().toLowerCase().replace(/\s+/g, '-');
          h.id = id;
          a.href = `#${id}`;
          a.textContent = h.textContent;
          li.appendChild(a);
          li.style.marginLeft = h.tagName === 'H3' ? '1rem' : '0';
          ul.appendChild(li);
        });
        toc.appendChild(ul);
      } else {
        toc.style.display = 'none';
      }
    </script>
  </body>
</html>
